<% if(success && success.length > 0){ %>
    <br> 
    <div class="alert alert-success alert-dismissible fade show col-6 offset-3" role="alert" style="z-index: 5;">
        <h4><%= success %></h4>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div> 
<% } %>
<% if(error && error.length > 0){ %>
    <br> 
    <div class="alert alert-danger alert-dismissible fade show col-6 offset-3" role="alert" style="z-index: 3;">
        <h4><%= error %></h4>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>